{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "shared/*": ["../shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
